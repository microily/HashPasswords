<Page x:Class="Dereev_21._101.Pages.Trader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dereev_21._101.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Trader" Background="White">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="Hello" FontSize="14" Text="Добро пожаловать!" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Center"/>
                <Button x:Name="OK" Content="OK" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,170" Click="OK_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

